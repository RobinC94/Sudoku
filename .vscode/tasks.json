{
	"version": "2.0.0",
	"tasks": [
		{
			"type": "shell",
			"label": "shell: clang++ build active file",
			"command": "/usr/bin/clang++",
			"args": [
				"-std=c++11",
				"-g",
				"${fileDirname}/main.cpp",
				"${fileDirname}/sudoku.cpp",
				"-o",
				"${fileDirname}/sudoku"
			],
			"options": {
				"cwd": "/usr/bin"
			},
			"problemMatcher": [
				"$gcc"
			],
			"group": "build"
		}
	]
}